<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis的DTD约束 mapper标识根标签名称  PUBLIC表示第三种引入DTD约束的方式：引入外部dtd文件约束-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    mapper：核心根标签
    namespace属性：名称空间  属性值与映射接口的全限定类名一致
-->
<mapper namespace="com.one.mapper.StudentMapper">
    <!--
        select：查询功能的标签
        id属性：唯一标识 属性值与映射接口的方法名一致
        resultType属性：指定结果映射对象类型 属性值与映射接口的方法的返回值类型一致
        parameterType属性：指定参数映射对象类型,如果是多个参数就封装到实体类对象中传递 属性值与映射接口的方法的形参类型一致
    -->
    <select id="selectAll" resultType="student">
        SELECT * FROM student2
    </select>

    <select id="selectById" resultType="student" parameterType="int">
        SELECT * FROM student2 WHERE id= #{id}
    </select>

    <insert id="insert" parameterType="student" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO student2 (name,age) VALUES (#{name},#{age})
    </insert>

    <update id="update" parameterType="student">
        UPDATE student2 SET name=#{name},age=#{age} WHERE id=#{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM student2 WHERE id=#{id}
    </delete>


</mapper>